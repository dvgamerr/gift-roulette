<div class="flex-1 p-5 bg-white flex flex-col items-center justify-center">
  <div class="w-full max-w-md mx-auto">
    <div class="relative mb-5">
      <div id="wheel" class="w-[300px] h-[300px] mx-auto relative">
        <!-- Canvas will replace this element -->
      </div>
      <div id="nameDisplay" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white px-4 py-2 rounded-lg text-xl font-bold transition-opacity duration-300 opacity-0"></div>
    </div>
    <div class="w-full mb-5">
      <button id="spinButton" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-4 rounded transition">
        Spin the Wheel
      </button>
    </div>
    <div class="w-full">
      <label for="friendsTextarea" class="block text-sm font-medium text-gray-700 mb-1">Add Friends (one per line):</label>
      <textarea id="friendsTextarea" class="w-full h-24 border border-gray-300 rounded px-3 py-2 mb-3" placeholder="Enter names here..."></textarea>
    </div>
  </div>
</div>
